<Window x:Class="WpfApp3.logowanie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="logowanie" Height="350" Width="300" FontSize="14">
    <Border Background="#2e3137" CornerRadius=" 20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Nazwa Użytkownika" Foreground="White"/>
            <TextBox Name="txtnazwaUzyt" FontSize="18"/>
            <Label Content="Hasło" Foreground="White"/>
            <PasswordBox Name="txtHaslo"  FontSize="18"/>
            <Button Name="btnLoguj" Click="BtnLoguj_Click" Content="Zaloguj" Margin="60 10" Background="black" Foreground="White" FontSize="18"/>
        </StackPanel>
    </Border>
</Window>
